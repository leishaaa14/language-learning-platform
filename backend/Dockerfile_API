# Stage 1: Build Stage
FROM node:18-alpine AS builder
WORKDIR /app

# Copy and install dependencies first for better caching
COPY package*.json ./
RUN npm install

# Copy all application source code
COPY . .

# Command to run the application (using 'npm start' or 'npm run dev')
# Assuming 'dev' script for local development with hot-reloading
CMD ["npm", "run", "dev"]